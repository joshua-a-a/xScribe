<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Required for hardened runtime with JIT compilation (Python/ML) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- Allow unsigned executable memory (required for some ML libraries) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Disable library validation for bundled dependencies -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Audio input for microphone transcription -->
    <key>com.apple.security.device.audio-input</key>
    <true/>
    
    <!-- File access for user-selected files -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    
    <!-- Network client for model downloads (Whisper models) -->
    <key>com.apple.security.network.client</key>
    <true/>
</dict>
</plist>
